<%= form_for :session, url: login_path, html: {class: "col flex-end"} do |f| %>

    <div class="input">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    
    <div class="input">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    

    <%= f.submit "Log In", class: "submit-btn" %>

<% end %>