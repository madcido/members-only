<div class="centered">
    <h1>People's Secrets</h1>
    <ul>
        <% @posts.each do |post| %>
            <li>
                <p><%= post.content %></p>
                <% if logged_in? %>
                    <p>Author: <%= post.user.name %></p>
                <% end %>
            </li>
        <% end %>
    </ul>
</div>
